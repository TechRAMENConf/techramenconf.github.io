<section class="section-colored section-light py-10">
  <div class="container">
    <!-- セクションタイトル -->
    <div class="text-center mb-8">
      <h2 class="text-center mb-2">
        <span class="title-plate title-plate-large">
          <span class="tape-correction">参加</span>申し込み
        </span>
      </h2>
      <p class="text-led-green text-sm font-kikai">
        TechRAMEN 2025 Conferenceへの<span class="tape-correction">参加</span>をお待ちしています
      </p>
    </div>

    <!-- メインのチケット購入ボタン -->
    <div class="flex justify-center mb-8 relative">
      <!-- LED装飾パネル -->
      <div class="absolute -left-12 top-1/2 transform -translate-y-1/2 hidden md:block">
        <div class="led-strip">
          <div class="led-indicator led-sm led-green led-pulse"></div>
          <div class="led-indicator led-sm led-green"></div>
          <div class="led-indicator led-sm led-green led-pulse"></div>
        </div>
      </div>
      
      <a 
        href="https://fortee.jp/techramen-25-conf/ticket-shop/index/7f66d72e-4a85-4d54-85ca-94f70abea7be" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="btn btn-primary text-xl px-12 py-6 flex items-center gap-3 ticket-button text-gray-800 font-bold"
      >
        <ion-icon name="ticket-outline" class="text-2xl"></ion-icon>
        チケットを購入
      </a>
      
      <!-- LED装飾パネル -->
      <div class="absolute -right-12 top-1/2 transform -translate-y-1/2 hidden md:block">
        <div class="led-strip">
          <div class="led-indicator led-sm led-green led-pulse"></div>
          <div class="led-indicator led-sm led-green"></div>
          <div class="led-indicator led-sm led-green led-pulse"></div>
        </div>
      </div>
    </div>

    <!-- サブリンク -->
    <div class="flex flex-col sm:flex-row justify-center items-center gap-4 p-2">
      <a 
        href="https://note.com/techramenconf/m/m0938ea0596c0" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="btn btn-secondary text-sm px-4 py-2 flex items-center gap-2 control-button"
      >
        <span class="[&>svg]:h-4 [&>svg]:w-4">
          <svg width="493" height="493" viewBox="0 0 493 493" fill="none" xmlns="http://www.w3.org/2000/svg">
            <!-- 正方形の角丸背景 -->
            <rect x="1" y="1" width="491" height="491" rx="104" fill="#FFFFFF" stroke="#333333" stroke-width="3"/>
            <!-- nのアイコン -->
