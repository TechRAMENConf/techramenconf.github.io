---
const speakerProfiles = await Astro.glob('@/pages/Speakers/*.md');
---

<section class="section-colored section-secondary" id="speakers">
  <div class="container">
    <h2 class="handwritten-title text-center text-white mb-8">
      Guest Speakers
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-6xl mx-auto">
      {speakerProfiles.map((profile) => (
        <div class="card control-panel control-panel-screw-enhanced overflow-hidden">
          <div class="bottom-screw-left"></div>
          <div class="bottom-screw-right"></div>
          <div class="relative">
            <img 
              src={profile.frontmatter.image} 
              alt={profile.frontmatter.name} 
              class="w-full h-80 object-cover object-top" 
            />
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-dark/90 to-transparent p-4">
              <h3 class="text-lg text-led-green font-kikai font-bold">{profile.frontmatter.name}</h3>
            </div>
          </div>
          <div class="p-5">
            {profile.frontmatter.x && (
              <p class="mb-3">
                <a href={profile.frontmatter.x} class="text-led-blue hover:text-white flex items-center transition-colors text-sm">
                  <ion-icon name="logo-twitter" class="mr-2"></ion-icon>
                  @{profile.frontmatter.x.split('/').pop()}
                </a>
              </p>
            )}
            <p class="text-white/90 font-kikai text-sm">{profile.frontmatter.content}</p>
            <div class="mt-3">
              <a href={`/Speakers/${profile.url?.split('/').pop() || ''}`} class="text-led-yellow hover:text-white inline-flex items-center transition-colors text-sm">
                詳細を見る
                <ion-icon name="arrow-forward-outline" class="ml-1"></ion-icon>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
