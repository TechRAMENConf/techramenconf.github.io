---
const speakerProfiles = await Astro.glob('@/pages/Speakers/*.md');
---

<section class="section-colored section-secondary" id="speakers">
  <div class="container">
    <h2 class="handwritten-title text-center text-white mb-12">
      Guest Speakers
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {speakerProfiles.map((profile) => (
        <div class="card overflow-hidden">
          <div class="relative">
            <img 
              src={profile.frontmatter.image} 
              alt={profile.frontmatter.name} 
              class="w-full h-96 object-cover object-top" 
            />
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
              <h3 class="text-xl text-white">{profile.frontmatter.name}</h3>
            </div>
          </div>
          <div class="p-6">
            {profile.frontmatter.x && (
              <p class="mb-4">
                <a href={profile.frontmatter.x} class="text-primary hover:text-primary/70 flex items-center">
                  <ion-icon name="logo-twitter" class="mr-2"></ion-icon>
                  @{profile.frontmatter.x.split('/').pop()}
                </a>
              </p>
            )}
            <p class="text-gray-700">{profile.frontmatter.content}</p>
            <div class="mt-4">
              <a href={`/Speakers/${profile.url?.split('/').pop() || ''}`} class="text-primary hover:text-primary/70 inline-flex items-center">
                詳細を見る
                <ion-icon name="arrow-forward-outline" class="ml-1"></ion-icon>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
