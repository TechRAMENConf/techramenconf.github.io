---
const speakerProfiles = await Astro.glob('@/pages/Speakers/*.md');
---
<section class="scroll-mt-12" id="guests">
  <div class="px-8 md:px-12 py-12 max-w-2xl mx-auto">
    <div>
      <h2
        class="text-2xl tracking-tighter  font-light lg:text-4xl text-black"
      >
      Guest Speakers
      </h2>
    </div>
    <div class="flex flex-wrap justify-center gap-8 mt-8">
      {speakerProfiles.map((profile) => (
        <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 p-4">
              <h2>{profile.frontmatter.name}</h2>
              <p>{profile.frontmatter.title}</p>
              <p>{profile.frontmatter.bio}</p>
              <img src={profile.frontmatter.image} alt={profile.frontmatter.name} class="w-full h-auto" />
              <a href={profile.url} class="text-blue-500 hover:text-blue-700">詳細を見る</a>
          </div>
      ))}
    </div>
  </div>
</section>
