---
const speakerProfiles = await Astro.glob('@/pages/Speakers/*.md');
---

<section class="scroll-mt-12" id="speakers">
  <div class="px-8 md:px-12 py-12 max-w-6xl mx-auto">
    <div>
      <h2
        class="text-2xl tracking-tighter font-light lg:text-4xl text-black text-center"
      >
      Guest Speakers
      </h2>
    </div>
    <div class="flex flex-wrap justify-center gap-8 mt-8">
      {speakerProfiles.map((profile) => (
        <div class="flex flex-col md:flex-row w-full md:w-3/4 lg:w-3/4 xl:w-3/4 2xl:w-3/4 p-4 gap-4">
          <img src={profile.frontmatter.image} alt={profile.frontmatter.name} class="w-full md:w-1/3 h-64 object-cover object-top rounded-3xl" />
          <div class="w-full md:w-2/3 flex flex-col justify-between">
            <div class="flex items-center gap-2">
              <h2 class="text-1xl tracking-tighter font-light lg:text-2xl text-black">{profile.frontmatter.name}</h2>
              {profile.frontmatter.x && (
                <a href={profile.frontmatter.x} target="_blank" rel="noopener noreferrer">
                  <img src="/x-logo-black.png" alt="X logo" class="w-6 h-6" /> <!-- アイコンサイズは例として設定 -->
                </a>
              )}
            </div>
            <p>{profile.frontmatter.content}</p>
          </div>
        </div>
      ))}
  </div>
</div>
</section>
