---
interface Staff {
  name: string;
  link_url: string;
  avatar_url: string;
  type: string;
}

// fortee のスタッフ取得 API を呼び出し
const response = await fetch('https://fortee.jp/techramen-25-conf/api/staff/v1');
const data = await response.json();
const staffList = data.staff as Staff[];

// スタッフをタイプ別に分類し、名前が空のスタッフは除外
const coreStaff = staffList.filter((staff: Staff) => staff.type === 'コアスタッフ' && staff.name && staff.name.trim() !== '');
const supportStaff = staffList.filter((staff: Staff) => staff.type === 'サポートスタッフ' && staff.name && staff.name.trim() !== '');
const eventDayStaff = staffList.filter((staff: Staff) => staff.type === '当日スタッフ' && staff.name && staff.name.trim() !== '');

import CoreStaff from './staff/CoreStaff.astro';
import SupportStaff from './staff/SupportStaff.astro';
import EventDayStaff from './staff/EventDayStaff.astro';
---

<div id="staff-list">
  {coreStaff.length > 0 && <CoreStaff staffList={coreStaff} />}
  {supportStaff.length > 0 && <SupportStaff staffList={supportStaff} />}
  {eventDayStaff.length > 0 && <EventDayStaff staffList={eventDayStaff} />}
</div>
