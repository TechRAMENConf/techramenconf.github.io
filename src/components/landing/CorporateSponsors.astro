---
import corporatesponsorsData from "../data/corporate_sponsors.json";
const corporatesponsors = corporatesponsorsData;

// 口数をカウントする
const uniqueCounts: { [key: string]: number } = {};
corporatesponsors.forEach((sponsor) => {
  if (uniqueCounts[sponsor.userName]) {
    uniqueCounts[sponsor.userName]++;
  } else {
    uniqueCounts[sponsor.userName] = 1;
  }
});

// 重複しているものを取り除く
const uniqueSponsors = corporatesponsors.filter(
  (sponsor, index, self) =>
    self.findIndex((s) => s.userName === sponsor.userName) === index
);
---

<section class="section-colored section-secondary" id="corporate-sponsors">
  <div class="container">
    <h2 class="handwritten-title text-center text-secondary mb-12 led-text">
      ラーメン応援法人団
    </h2>
    
    <div class="card p-8 md:p-12 max-w-4xl mx-auto glow-secondary">
      {
        uniqueSponsors.map((sponsor) => (
          <div class="mb-8">
            <h3 class="text-xl mb-4 text-secondary font-kikai led-text">{sponsor.userName} </h3>
            <div class="flex flex-wrap gap-4">
              {Array.from({ length: uniqueCounts[sponsor.userName] }).map(
                () => (
                  <div class="relative group">
                    <a href={sponsor.url} class="block transition-transform hover:scale-110 glow-primary">
                      <img
                        src={sponsor.avatarUrl}
                        class="w-24 h-24 object-cover rounded-lg border border-primary/30"
                        alt={sponsor.userName}
                      />
                    </a>
                  </div>
                )
              )}
            </div>
          </div>
        ))
      }
      
      <div class="mt-12 text-center">
        <p class="text-secondary/80 mb-6 font-kikai">
          企業スポンサーとして応援していただける企業様を募集しています
        </p>
        <a href="https://note.com/tomio2480/n/n9280fae6ab29?magazine_key=m8fb20b0824ea" class="btn btn-primary led-text">
          スポンサーになる
        </a>
      </div>
    </div>
  </div>
</section>
