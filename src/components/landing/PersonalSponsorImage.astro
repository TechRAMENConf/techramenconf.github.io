---
const { avatarUrl } = Astro.props;
---

{
  avatarUrl === "/avatar_default.jpg" || avatarUrl.includes("default-avatar.png") ? (
    <img src="/avatar_default.jpg" class="rounded-full w-16 h-16 opacity-60" />
  ) : avatarUrl.startsWith('/avatars/') ? (
    <img
      src={"https://fortee.jp" + avatarUrl}
      class="rounded-full w-16 h-16"
    />
  ) : (
    <img
      src={avatarUrl.startsWith('http') ? avatarUrl : "https://fortee.jp/" + avatarUrl}
      class="rounded-full w-16 h-16"
    />
  )
}
